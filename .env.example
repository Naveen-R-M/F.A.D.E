# API keys
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Paths to executables and containers
ALPHAFOLD3_CONTAINER=/shared/container_repository/AlphaFold/alphafold3.sif
SCHRODINGER_PATH=/shared/EL9/explorer/schrodinger/2024-4

# HPC configuration
SCRATCH_DIR=/scratch/$USER
CLUSTER_PARTITION=gpu
DEFAULT_GPU_TYPE=v100
DEFAULT_WALLTIME=04:00:00
DEFAULT_MEMORY=32G

# Job parameters
NUM_CPUS_DOCKING=8
NUM_GPUS_STRUCTURE=1
MAX_MOLECULE_CANDIDATES=50
MAX_REFINEMENT_CYCLES=5

# Database access
UNIPROT_API_ENDPOINT=https://rest.uniprot.org/uniprotkb/
PDB_API_ENDPOINT=https://data.rcsb.org/rest/v1/core/entry/

# Output configuration
SAVE_INTERMEDIATE_RESULTS=true
GENERATE_VISUALIZATIONS=true
OUTPUT_FORMAT=json

# Logging
LOG_LEVEL=INFO
DETAILED_LOGGING=true
