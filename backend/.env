# F.A.D.E Backend Configuration for DeepSeek
# Example configuration for local DeepSeek model

# LLM Configuration for DeepSeek
AI_MODEL=deepseek-r1:8b
AI_API_BASE=http://localhost:11434/v1  # Ollama endpoint
OPENAI_API_KEY=dummy  # DeepSeek via Ollama doesn't need a real key

# Optional: Cloud LLM API Keys (if you want fallback)
# ANTHROPIC_API_KEY=
# GOOGLE_API_KEY=

# Boltz2 Configuration (optional for now)
BOLTZ2_SERVER_URL=http://localhost:8080
# BOLTZ2_API_KEY=
BOLTZ2_MAX_SEQUENCE_LENGTH=2048

# Pipeline Configuration
MAX_MOLECULES_TO_GENERATE=1000
MAX_MOLECULES_TO_SCREEN=100
MAX_POCKETS_TO_ANALYZE=5

# Molecular Filtering Thresholds
MAX_MOLECULAR_WEIGHT=500
MIN_LOGP=-0.4
MAX_LOGP=5.6
MAX_ROTATABLE_BONDS=10
MAX_HBD=5
MAX_HBA=10
MIN_QED_SCORE=0.3
MAX_SA_SCORE=6.0

# Performance
ENABLE_CACHING=true
CACHE_TTL=3600
MAX_PARALLEL_JOBS=4
REQUEST_TIMEOUT=300

# Logging
LOG_LEVEL=INFO

