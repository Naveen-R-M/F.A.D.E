# F.A.D.E Backend Configuration
# Copy this file to .env and fill in your values

# LLM API Keys (at least one required)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
AI_MODEL=gpt-4  # or claude-3-opus, gemini-pro, etc.

# Boltz2 Configuration (required)
BOLTZ2_SERVER_URL=http://localhost:8080
BOLTZ2_API_KEY=
BOLTZ2_MAX_SEQUENCE_LENGTH=2048

# SILCS Configuration (optional, for pocket detection)
SILCS_EXECUTABLE=silcs
SILCS_LICENSE=

# DiffSBDD Configuration (for molecule generation)
DIFFSBDD_MODEL_PATH=./data/models/diffsbdd
DIFFSBDD_DEVICE=cuda  # or cpu

# Pipeline Configuration
MAX_MOLECULES_TO_GENERATE=1000
MAX_MOLECULES_TO_SCREEN=100
MAX_POCKETS_TO_ANALYZE=5

# Molecular Filtering Thresholds (Lipinski's Rule of Five + extras)
MAX_MOLECULAR_WEIGHT=500
MIN_LOGP=-0.4
MAX_LOGP=5.6
MAX_ROTATABLE_BONDS=10
MAX_HBD=5  # Hydrogen Bond Donors
MAX_HBA=10  # Hydrogen Bond Acceptors
MIN_QED_SCORE=0.3  # Quantitative Estimate of Drug-likeness
MAX_SA_SCORE=6.0  # Synthetic Accessibility

# Performance Configuration
ENABLE_CACHING=true
CACHE_TTL=3600  # seconds
MAX_PARALLEL_JOBS=4
REQUEST_TIMEOUT=300  # seconds

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# HPC Configuration (optional, for cluster deployment)
USE_HPC=false
SLURM_PARTITION=default
SLURM_ACCOUNT=

# HPC SSH Configuration (for fpocket and other HPC tools)
HPC_HOST=explorer.northeastern.edu
HPC_PORT=22
HPC_USER=
HPC_PASSWORD=
HPC_SSH_KEY=
HPC_SSH_PASSPHRASE=
