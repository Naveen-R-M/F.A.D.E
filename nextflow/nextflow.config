/*
 * F.A.D.E Nextflow Configuration - Minimal Working Version
 */

// Default parameters
params {
    // Input/Output
    query = null
    output_dir = "results_${new Date().format('yyyyMMdd_HHmmss')}"
    
    // Pipeline control
    max_molecules = 100
    max_iterations = 3
    min_docking_score = -7.0
    docking_method = "vina"
    
    // Resource limits
    max_cpus = 4
    max_memory = '16.GB'
    max_time = '24.h'
    
    // API Keys
    gemini_api_key = ""
    
    // Features
    use_alphafold = true
    run_fep = false
}

// Process defaults
process {
    executor = 'local'
    cpus = 1
    memory = '2.GB'
    time = '1.h'
}

// Profiles
profiles {
    local {
        process.executor = 'local'
    }
    
    northeastern {
        process {
            executor = 'slurm'
            queue = 'gpu-short'
        }
    }
}
